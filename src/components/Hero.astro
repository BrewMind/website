---

<section id="hero" class="relative min-h-screen flex items-center justify-center pt-24 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-gradient-to-b from-bg-alt via-bg to-bg"></div>
  <div class="absolute top-1/4 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full bg-primary/5 blur-3xl"></div>
  <div class="absolute bottom-1/4 right-1/4 w-[400px] h-[400px] rounded-full bg-accent/5 blur-3xl"></div>

  <!-- Floating coffee beans (subtle background decoration) -->
  <svg class="coffee-bean w-6 top-[12%] left-[8%] hidden sm:block" style="animation: bean-drift-1 28s ease-in-out infinite" viewBox="0 0 30 42" fill="currentColor" aria-hidden="true">
    <path d="M15 2C8 2 2 11 2 21s6 19 13 19c-2-5-5-12-5-19S13 7 15 2z"/>
    <path d="M15 2c2 5 5 12 5 19s-3 14-5 19c7 0 13-9 13-19S22 2 15 2z"/>
  </svg>
  <svg class="coffee-bean w-10 top-[22%] right-[10%]" style="animation: bean-drift-2 35s ease-in-out -8s infinite" viewBox="0 0 30 42" fill="currentColor" aria-hidden="true">
    <path d="M15 2C8 2 2 11 2 21s6 19 13 19c-2-5-5-12-5-19S13 7 15 2z"/>
    <path d="M15 2c2 5 5 12 5 19s-3 14-5 19c7 0 13-9 13-19S22 2 15 2z"/>
  </svg>
  <svg class="coffee-bean w-12 top-[55%] left-[5%] hidden sm:block" style="animation: bean-drift-3 32s ease-in-out -15s infinite" viewBox="0 0 30 42" fill="currentColor" aria-hidden="true">
    <path d="M15 2C8 2 2 11 2 21s6 19 13 19c-2-5-5-12-5-19S13 7 15 2z"/>
    <path d="M15 2c2 5 5 12 5 19s-3 14-5 19c7 0 13-9 13-19S22 2 15 2z"/>
  </svg>
  <svg class="coffee-bean w-7 bottom-[30%] right-[7%]" style="animation: bean-drift-1 38s ease-in-out -20s infinite" viewBox="0 0 30 42" fill="currentColor" aria-hidden="true">
    <path d="M15 2C8 2 2 11 2 21s6 19 13 19c-2-5-5-12-5-19S13 7 15 2z"/>
    <path d="M15 2c2 5 5 12 5 19s-3 14-5 19c7 0 13-9 13-19S22 2 15 2z"/>
  </svg>
  <svg class="coffee-bean w-8 bottom-[15%] left-[18%] hidden sm:block" style="animation: bean-drift-2 30s ease-in-out -10s infinite" viewBox="0 0 30 42" fill="currentColor" aria-hidden="true">
    <path d="M15 2C8 2 2 11 2 21s6 19 13 19c-2-5-5-12-5-19S13 7 15 2z"/>
    <path d="M15 2c2 5 5 12 5 19s-3 14-5 19c7 0 13-9 13-19S22 2 15 2z"/>
  </svg>

  <div class="relative z-10 max-w-6xl mx-auto px-6 text-center">
    <!-- Headline -->
    <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold leading-tight mb-6 animate">
      Jede Tasse.<br />
      <span class="text-gradient">Perfekt begleitet.</span>
    </h1>

    <!-- Subline -->
    <p class="text-lg sm:text-xl text-text-secondary max-w-2xl mx-auto mb-10 animate">
      Espresso, Filter, Vollautomat — BrewMind trackt deine Shots,
      verbindet deine Geräte und lernt aus deinem Geschmack.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-16 animate">
      <!-- App Store placeholder -->
      <div class="flex items-center gap-3 px-6 py-3 rounded-xl bg-surface border border-border text-text-muted cursor-default">
        <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        <div class="text-left">
          <div class="text-xs text-text-muted">Bald im</div>
          <div class="text-sm font-semibold text-text">App Store</div>
        </div>
      </div>

      <a href="#features" class="px-6 py-3 rounded-xl text-sm font-medium text-primary hover:text-primary-light transition-colors">
        Features entdecken &darr;
      </a>
    </div>

    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-surface border border-border mb-12 animate">
      <span class="w-2 h-2 rounded-full bg-success animate-pulse"></span>
      <span class="text-sm text-text-secondary">In aktiver Entwicklung</span>
    </div>

    <!-- App Mockup Placeholder -->
    <div class="relative max-w-sm mx-auto animate-scale">
      <div class="aspect-[9/19] rounded-[2.5rem] bg-surface border-2 border-border overflow-hidden glow-primary">
        <!-- Phone frame -->
        <div class="w-full h-full flex flex-col">
          <!-- Status bar -->
          <div class="h-12 bg-bg-alt flex items-center justify-center">
            <div class="w-24 h-5 rounded-full bg-bg"></div>
          </div>

          <!-- App content placeholder -->
          <div class="flex-1 p-4 flex flex-col gap-3">
            <!-- Header row -->
            <div class="flex items-center justify-between">
              <div class="w-20 h-4 rounded bg-surface-light"></div>
              <div class="flex gap-2">
                <div class="w-6 h-6 rounded-full bg-primary/20"></div>
                <div class="w-6 h-6 rounded-full bg-accent/20"></div>
              </div>
            </div>

            <!-- KPI Cards -->
            <div class="grid grid-cols-3 gap-2 mt-2">
              <div class="aspect-square rounded-xl bg-surface-light flex flex-col items-center justify-center p-2">
                <div class="text-2xl font-bold text-primary">18.2</div>
                <div class="text-[8px] text-text-muted mt-0.5">GEWICHT</div>
              </div>
              <div class="aspect-square rounded-xl bg-surface-light flex flex-col items-center justify-center p-2">
                <div class="text-2xl font-bold text-accent">1:2.1</div>
                <div class="text-[8px] text-text-muted mt-0.5">RATIO</div>
              </div>
              <div class="aspect-square rounded-xl bg-surface-light flex flex-col items-center justify-center p-2">
                <div class="text-2xl font-bold text-text">28s</div>
                <div class="text-[8px] text-text-muted mt-0.5">ZEIT</div>
              </div>
            </div>

            <!-- Chart placeholder -->
            <div class="flex-1 rounded-xl bg-surface-light mt-2 flex items-end p-3 gap-0.5 overflow-hidden">
              {[20,25,35,50,60,68,72,74,75,75,74,73,71,68,65,62].map((h) => (
                <div class="flex-1 rounded-t bg-primary/40" style={`height: ${h}%`}></div>
              ))}
            </div>

            <!-- Bottom button -->
            <div class="h-12 rounded-xl gradient-primary flex items-center justify-center mt-2">
              <span class="text-sm font-semibold text-white">Bereit</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
