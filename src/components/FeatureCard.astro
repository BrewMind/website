---
interface Props {
  icon: string;
  title: string;
  description: string;
  accentColor?: 'primary' | 'accent' | 'success' | 'warning';
}

const { icon, title, description, accentColor = 'primary' } = Astro.props;

const colorMap = {
  primary: { bg: 'bg-primary/10', text: 'text-primary', border: 'border-primary/20' },
  accent: { bg: 'bg-accent/10', text: 'text-accent', border: 'border-accent/20' },
  success: { bg: 'bg-success/10', text: 'text-success', border: 'border-success/20' },
  warning: { bg: 'bg-warning/10', text: 'text-warning', border: 'border-warning/20' },
};

const colors = colorMap[accentColor];
---

<div class={`group relative rounded-2xl bg-surface border ${colors.border} p-6 hover:border-${accentColor}/40 transition-all duration-300 hover:-translate-y-1`}>
  <!-- Icon -->
  <div class={`w-12 h-12 rounded-xl ${colors.bg} flex items-center justify-center mb-4`}>
    <span class={`text-2xl ${colors.text}`} set:html={icon} />
  </div>

  <!-- Content -->
  <h3 class="text-lg font-semibold text-text mb-2">{title}</h3>
  <p class="text-sm text-text-secondary leading-relaxed">{description}</p>
</div>
